{
	"tasks": {
		"dev": "npm run dev",
		"start": "npm run dev",
		"build": "npm run build",
		"preview": "deno run -A --unstable ./dist/server/entry.mjs",
		"format": "deno run -A npm:prettier --write .",
		"lint": "deno run -A npm:eslint src/",
		"test": "deno test -A --no-check",
		"generate": "deno run -A scripts/generate.ts",
		"release:dry": "npm run release:dry",
		"release": "npm run release"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext", "deno.ns"]
	},
	"test": {
		"include": ["tests/*.spec.ts"]
	},
	"nodeModulesDir": "auto",
	"imports": {
		"@/": "./src/",
		"@/api/": "./src/api/",
		"@/application/": "./src/application/",
		"@/domain/": "./src/domain/",
		"@/infrastructure/": "./src/infrastructure/",
		"@/shared/": "./src/shared/",
		"@/tests/": "./tests/"
	}
}
